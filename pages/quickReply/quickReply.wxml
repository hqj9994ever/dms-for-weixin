<!-- pages/menu.wxml -->
<cu-custom bgColor="bg-gradual-blue">
  <view slot="content">主页</view>
</cu-custom>

<view class="bg-white padding">
  <view class="userinfo" style="padding-top:50px">
    <view class="avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view style="padding-top:10px">
      <open-data type="userNickName"></open-data>
    </view>

  </view>

  <view class="page" style="padding-top:40px">
    <view class="page__bd">
      <view class="weui-grids">
        <block wx:for="{{grids}}" wx:for-index="grid">
          <view wx:if="{{grids[grid]==1}}" bindtap="ToElectricityInfo">
            <view class="weui-grid" hover-class="weui-grid_active" bindtap='onBindQyLogin'>
              <image class="weui-grid__icon" src="/static/login.png" />
              <view class="weui-grid__label">企微登录</view>
            </view>
          </view>
          <view wx:if="{{grids[grid]==2}}">
            <view class="weui-grid" hover-class="weui-grid_active" bindtap='onBindCodeToSession'>
              <image class="weui-grid__icon" src="/static/sossession.png" />
              <view class="weui-grid__label">get
                Session</view>

            </view>
          </view>
          <view wx:if="{{grids[grid]==3}}">
            <view class="weui-grid" hover-class="weui-grid_active" bindtap='onBindCheckSession'>
              <image class="weui-grid__icon" src="/static/check.png" />
              <view class="weui-grid__label">校验session</view>
            </view>
          </view>
          <view wx:if="{{grids[grid]==4}}">
            <view class="weui-grid" hover-class="weui-grid_active" bindtap='onBindSendQuickReply'>
              <image class="weui-grid__icon" src="/static/message.png" />
              <view class="weui-grid__label">发消息</view>
            </view>
          </view>
        </block>
      </view>
    </view>
  </view>
</view>